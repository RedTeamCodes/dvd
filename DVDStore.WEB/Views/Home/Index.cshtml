@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<DVDStore.Data.Models.DVD>


@{
    ViewBag.Title = "Search for DVD's";
}

<h2>DVDStore</h2><br />
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Content/ComingSoon.jpg" alt="Moonlight (2016) Coming Soon" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Coming Soon</h3>
                    <p></p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/NewLoc.jpg" alt="New Miami Location Notice" style="width:100%;">
                <div class="carousel-caption">
                    <h3>New Location!</h3>
                    <p>Come see us at our new Miami Location!</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/kidsmovies.jpg" alt="Kids Movie Sale" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Special Offer!</h3>
                    <p></p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{<div class="dropdown">
    <p id="searchBoxes">

        Search for DVD Titles: @Html.TextBox("FilterText")
        <input type="submit" value="Filter" /> <br />
        &nbsp;OR&nbsp;
        Search for DVD by Actor's Last Name: @Html.TextBox("LastName")
        <input type="submit" value="Find" />  &nbsp;OR&nbsp;

        Genre: @Html.DropDownList("movieGenre", "All")    <input type="submit" value="Find" /><br />&nbsp;OR&nbsp;
        Rating: @Html.DropDownList("movieRating", "All")    <input type="submit" value="Find" /><br />

    </p>
</div>

}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PictureSmall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actor)
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@ViewBag.ImageData[item.Id]" width="120" height="170" />
            </td>
            <td>
                <b>  @Html.DisplayFor(modelItem => item.Title)</b>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actor)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = @item.Id })
            </td>
        </tr>
    }

</table>

