@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DVDStore.Data.Models.DVD>

@{
    ViewBag.Title = "Index";
}
@*<h2>Index</h2>*@
<p></p>

<body>
    <div id="main">
        @using (Html.BeginForm("Index", "DVD", FormMethod.Get))
        {
            <p>
                Title: @Html.TextBox("FilterText")
                <input class="button" type="submit" value="Filter" />
            </p>



        }


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate.ToString("MM/dd/yyyy"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("View Page", "Details", new { id = @item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
