<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Best DVD</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <header>Best DVD<hr /></header>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("About Us", "About", "Home")
        @Html.ActionLink("Shipping Info", "Shipping", "Home")

    </div>
    <span onclick="openNav()"><img src="~/Content/" /></span>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

    <div class="container-fluid body-content">
        <div id="main">
            @RenderBody()

        </div>
    </div>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - BestDVD</p>
    </footer>

    <script type="text/javascript">
        $('#test').BootSideMenu({ side: "left", autoClose: false });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/BootSideMenu.js")


    @RenderSection("scripts", required: false)
</body>
</html>
