<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BestDVD</title>
    <link href="https://fonts.googleapis.com/css?family=Abel|Muli" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Abel|Muli|Signika" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
</head>

<body>
    <header>RedTeam DVD !</header>
    
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("About Us", "About", "Home")
        @Html.ActionLink("Shipping Info", "Shipping", "Home")

    </div>
    
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

    <div class="container-fluid body-content">
        <div id="main">
            <span style="color:green ;font-size:16px; cursor:pointer" onclick="openNav()">&#9776;</span>
            @RenderBody()
            
        </div>
    </div>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - RedTeam DVD </p>
    </footer>

    <script type="text/javascript">
        $('#test').BootSideMenu({ side: "left", autoClose: false });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/BootSideMenu.js")


    @RenderSection("scripts", required: false)
</body>
</html>
